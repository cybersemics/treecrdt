{
  "name": "@treecrdt/wa-sqlite-demo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build:wa-sqlite": "cd ../../../vendor/wa-sqlite && make dist",
    "postbuild:wa-sqlite": "mkdir -p public/wa-sqlite && cp ../../../vendor/wa-sqlite/dist/wa-sqlite.mjs ../../../vendor/wa-sqlite/dist/wa-sqlite.wasm ../../../vendor/wa-sqlite/dist/wa-sqlite-async.mjs ../../../vendor/wa-sqlite/dist/wa-sqlite-async.wasm public/wa-sqlite/",
    "build": "pnpm run build:wa-sqlite && pnpm run postbuild:wa-sqlite && vite build",
    "dev": "vite",
    "test:e2e": "pnpm run build:wa-sqlite && pnpm run postbuild:wa-sqlite && playwright test"
  },
  "dependencies": {
    "@treecrdt/wa-sqlite": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.25",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  }
}
