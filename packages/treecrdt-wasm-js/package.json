{
  "name": "@treecrdt/wasm",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "pkg"
  ],
  "scripts": {
    "build:wasm": "wasm-pack build ../../packages/treecrdt-wasm --target nodejs --out-dir $(pwd)/pkg --release",
    "build:ts": "tsc -p tsconfig.json",
    "build": "pnpm run build:wasm && pnpm run build:ts",
    "benchmark": "pnpm run build && tsx ./scripts/bench.ts"
  },
  "dependencies": {
    "@treecrdt/interface": "workspace:*",
    "@treecrdt/benchmark": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
